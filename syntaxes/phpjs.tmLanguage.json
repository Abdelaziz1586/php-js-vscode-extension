{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PHP-JS",
  "scopeName": "source.phpjs",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#variables" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.phpjs",
          "match": "//.*$"
        },
        {
          "name": "comment.block.phpjs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.phpjs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.phpjs",
              "match": "\\\\."
            },
            {
              "name": "variable.other.phpjs",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.phpjs",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.phpjs",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.phpjs",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.phpjs",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.phpjs",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.phpjs",
          "match": "\\b(if|else|elseif|for|foreach|while|do|switch|case|default|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.phpjs",
          "match": "\\b(echo|function|as|include|require)\\b"
        },
        {
          "name": "storage.type.phpjs",
          "match": "\\b(var|const|let)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.phpjs",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "entity.name.function.phpjs"
            }
          }
        },
        {
          "name": "support.function.builtin.phpjs",
          "match": "\\b(strlen|substr|strtoupper|strtolower|trim|ltrim|rtrim|str_replace|strpos|explode|implode|array_push|array_pop|count|isset|empty|is_array|is_string|is_numeric)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.phpjs",
          "match": "(===|!==|==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.phpjs",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.phpjs",
          "match": "(\\+\\+|--|\\+|-|\\*|/|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.assignment.phpjs",
          "match": "(=|\\+=|-=|\\*=|/=|%=|\\.=)"
        },
        {
          "name": "keyword.operator.string.phpjs",
          "match": "\\."
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.phpjs",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.phpjs",
          "match": "\\bfalse\\b"
        },
        {
          "name": "constant.language.null.phpjs",
          "match": "\\bnull\\b"
        }
      ]
    }
  }
}
