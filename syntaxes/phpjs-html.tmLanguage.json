{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PHP-JS in HTML",
  "scopeName": "text.html.phpjs",
  "injectionSelector": "L:text.html",
  "patterns": [
    {
      "name": "meta.embedded.block.phpjs",
      "begin": "(<)(script)(\\s+[^>]*type\\s*=\\s*[\"']text/phpjs[\"'][^>]*)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.script.html" },
        "3": { "patterns": [{ "include": "text.html.basic#attribute" }] },
        "4": { "name": "punctuation.definition.tag.end.html" }
      },
      "end": "(</)(script)(>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.script.html" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "contentName": "source.phpjs",
      "patterns": [
        { "include": "source.phpjs" }
      ]
    }
  ]
}
